@model EcommerceEntityFrameWorkRepositoryPattern.Models.ViewModelsArticlesCategories


@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mt-4 ">

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="imgslider" src="https://images.bbycastatic.ca/sf/projects/mth/2018/global/main-feature-hero/assets/2018-11/11-09/mainfeature-bg.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="imgslider" src="https://images.bbycastatic.ca/sf/projects/_content/_weekly/2017/home/main-feature-slide-3/assets/2017-10/10-20/main-feature-geeksquad.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="imgslider" src="https://images.bbycastatic.ca/sf/projects/_content/_weekly/2017/home/main-feature-slide-3/assets/2017-10/10-20/main-feature-geeksquad.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!-- end carousel  -->
@using (Html.BeginForm("Index", "MagasinHome"))
{
    <div class="row mt-4">
        <div class="col-sm-3">


        </div>
        <div class="col-sm-3">

            @Html.DropDownList("categorienom", new SelectList(Model.categorieMagasin, "categorienom", "categorienom"), "Tous les produits", new { @class = "form-control" })
        </div>
        <div class="col-sm-3">

            <button class="btn btn-primary" type="submit"> chercher </button>
        </div>
        <div class="col-sm-3">


        </div>

    </div>
}
<div class="others mt-4 mb-4">
    <img class="border img-fluid" src="https://images.bbycastatic.ca/sf/projects/_content/_categories/computing/_banners/2018/2018-10/new-mb-pc-bar/assets/macbookair-pc-bar.png" alt="">

</div>
@if (Model.categorieMagasin != null && Model.categorieMagasin.Count() > 0)
{

    <div class="row mt-3 mb-3">
        @foreach (var item in Model.categorieMagasin)

        {

            <div class="col-sm-3 mt-4 mb-4">

                <div class="card">
                    <img class="catd-img-top img-fluid " src="~/imgs/@item.imgctg" alt="Card image cap">
                    <div class="card-body">
 
                    </div>
                </div>

            </div>

        }
    </div>

}





