@model EcommerceEntityFrameWorkRepositoryPattern.Models.ViewModelsArticlesCategories
@{
    ViewBag.Title = "searcharticle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-3 mb-3">

    <h2>Mot clé recherché : @ViewBag.itemnom</h1>
</div>
@if (Model.articlesMagasin.Count() == 0)
{

    <div class="row ">
        <div class="col-sm-12">

            <h1>Aucun item trouvé</h1>
        </div>
        
    </div>
}

@if (Model.articlesMagasin != null || Model.articlesMagasin.Count()>0)
{
    <div class="row mt-3 mb-3">
        @foreach (var item in Model.articlesMagasin)

        {

            <div class="col-sm-4 mt-4 mb-4">

                <div class="card">
                    <img class="catd-img-top img-fluid " src="~/imgs/@item.img" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title"> @item.model</h5>
                        <h4 style="color:red">@item.prix</h4>
                        <h4>@item.marque</h4>
                        <a href="#" class="btn btn-primary">Ajouter au panier</a>
                    </div>
                </div>

            </div>

        }
    </div>

}

