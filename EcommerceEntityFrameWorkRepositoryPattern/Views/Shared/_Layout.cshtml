
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>project</title>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <!--   navbar ( bientot en Partial View)-->

    <div class="promotion">

        <div class="container pl-4 text-center ">
            click pour recevoir des promotions!!!
        </div>


    </div>
    <nav class="nav-b text-center">
        <h1>Welcome to BuyMagasin</h1>
        <p class="lead">Espace pour des annonces publicitaires des differents marques!</p>

        <div class="row pr-6 pl-6">

            <div class="col-sm-6">
                <div id="menu">
                    <ul>

                        <li>
                            <a href="#">Promotions</a>
                        </li>
                        <li>
                            <a href="#">Pièces et services</a>
                            <ul class="dropdown" style="position:absolute">

                                <li><a href="#">Carrosserie</a></li>
                                <li><a href="#">Pièces et accessoires</a></li>
                                <li><a href="#">Services d'esthétique</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">Financement</a>
                        </li>

                    </ul>
                </div>

            </div>
            <div class="col-sm-6 ">

                <form class="form-inline my-2 my-lg-0 mr-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>

        </div>

    </nav>
    <!--  END nav bar -->
    <!-- start carousel ( bientot en Partial View)-->
    <div class="mt-4 ">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="imgslider" src="https://images.bbycastatic.ca/sf/projects/mth/2018/global/main-feature-hero/assets/2018-11/11-09/mainfeature-bg.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="imgslider" src="https://images.bbycastatic.ca/sf/projects/_content/_weekly/2017/home/main-feature-slide-3/assets/2017-10/10-20/main-feature-geeksquad.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="imgslider" src="https://images.bbycastatic.ca/sf/projects/_content/_weekly/2017/home/main-feature-slide-3/assets/2017-10/10-20/main-feature-geeksquad.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!-- end carousel  -->
    <div class="container">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
